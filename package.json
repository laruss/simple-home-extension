{
  "name": "simple-home-page-extension",
  "module": "index.ts",
  "scripts": {
    "build": "bun run config/build.ts",
    "dev": "bun run config/watch.ts --dir=src,public",
    "pack": "bun run config/pack.ts",
    "css": "postcss",
    "lint": "bun biome lint",
    "format": "bun biome format",
    "typecheck": "tsc --noEmit",
    "fix": "bun lint --fix && bun format --fix && bun typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "^1.3.6",
    "@types/chrome": "^0.1.36",
    "@types/react-dom": "^19.2.3",
    "adm-zip": "^0.5.16",
    "chalk": "^5.6.2",
    "lefthook": "^2.0.15",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "element-ready": "^9.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
